<Window x:Class="ItViteaLetterTypeChaos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItViteaLetterTypeChaos"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="700">
    <Grid Background="WhiteSmoke">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.3*"/>
            </Grid.ColumnDefinitions>
            <TextBox Name="BoxTxt" Margin="5" TextWrapping="Wrap"/>
            <StackPanel Grid.Column="1" Margin="0,5">
                <Button Content="Import" Click="Btn_Click_Import"/>
                <Button Content="Export" Click="Btn_Click_Export"/>
                <Button Content="Scramble"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
